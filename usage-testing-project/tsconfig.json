{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["dom"],
        "strict": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "outDir": "out-tsc",
        "sourceMap": true,
        "inlineSources": true,
        "rootDir": "./",
        "incremental": true,
        "allowJs": true,
        "jsx": "preserve"
    },
    "include": ["**/*.ts", "**/*.js", "/**/*.html"]
}
